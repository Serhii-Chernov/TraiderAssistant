<Page x:Class="TraiderAssistant.UI.Views.BitcoinChartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:TraiderAssistant.UI.Views"
      xmlns:viewModels="clr-namespace:TraiderAssistant.UI.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="BitcoinChartView"
      d:DataContext="{d:DesignInstance viewModels:BitcoinChartViewModel}"
      >

    <Grid>
        <ComboBox ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding SelectedChartType}" HorizontalAlignment="Left" Width="70" VerticalAlignment="Top"  Margin="10,10,0,0"/>
        <Button Content="1 day" Command="{Binding LoadDayDataCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0"/>
        <Button Content="1 week" Command="{Binding LoadWeekDataCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0"/>
        <Button Content="1 month" Command="{Binding LoadMonthDataCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,10,0,0"/>
        <Button Content="1 year" Command="{Binding LoadYearDataCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,10,0,0"/>
        <Button Content="Analyze" Command="{Binding AnalyzeCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0"/>
        <TextBox Text="{Binding IndicatorValue, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="390,10,0,0"/>
        <!--<Button Content="Technical Analysis" Command="{Binding LoadTechnicalAnalysisCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0"/>-->

        <!-- Разметка для отображения данных -->
        <Grid Margin="10,40,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>


            <!-- График -->
            <lvc:CartesianChart Grid.Row="0" Series="{Binding Series}" LegendLocation="Right">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Days" Labels="{Binding Labels}"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Price (USD)"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <!-- Индикатор технического анализа -->
            <local:TechAnalysisView  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1"  TechnicalAnalysisResult="{Binding TechnicalAnalysisResult }"/>
        </Grid>
    </Grid>
</Page>

