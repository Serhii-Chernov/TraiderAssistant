<UserControl x:Class="TraiderAssistant.UI.Views.TechnicalAnalysisTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TraiderAssistant.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="200">
    <StackPanel>
        <TextBox Text="{Binding TechnicalAnalysisTableName, RelativeSource={RelativeSource AncestorType=UserControl}}" TextAlignment="Center"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
            <Grid x:Name="TableGrid" HorizontalAlignment="Stretch">
                <!-- Здесь можно добавить содержимое таблицы -->
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
