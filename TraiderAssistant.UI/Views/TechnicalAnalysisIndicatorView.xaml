<UserControl x:Class="TraiderAssistant.UI.Views.TechnicalAnalysisIndicatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TraiderAssistant.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300">

    <Viewbox StretchDirection="DownOnly">
        <StackPanel>
            <TextBox Text="{Binding TechnicalAnalysisName, RelativeSource={RelativeSource AncestorType=UserControl}}"  TextAlignment="Center"/>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                <Canvas x:Name="AnalysisCanvas" Width="250" Height="100" Background="White"/>
            </Border>
            <TextBox Text="{Binding TechnicalAnalysisText, RelativeSource={RelativeSource AncestorType=UserControl}}" TextAlignment="Center" />
        </StackPanel>
    </Viewbox>


</UserControl>
